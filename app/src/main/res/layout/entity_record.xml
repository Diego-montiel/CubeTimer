<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrambleTV"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/timeTV"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="99:99:999"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scrambleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/timeTV"
            android:text="R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2  R2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/timeTV"
            android:text="09.04.2021 05:19 PM"
            android:textSize="12sp" />

    </RelativeLayout>


</LinearLayout>